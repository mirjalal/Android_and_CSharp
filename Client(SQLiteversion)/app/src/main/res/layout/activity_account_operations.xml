<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AccountOperations">

    <Button
        android:id="@+id/register"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        />

    <Button
        android:id="@+id/updateInfo"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_existing"
        android:layout_below="@+id/register"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/export"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export"
        android:layout_below="@+id/updateInfo"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/importdb"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/importdb"
        android:layout_below="@+id/export"
        android:layout_alignParentStart="true" />

</RelativeLayout>
